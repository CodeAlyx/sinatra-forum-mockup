<section>
  <form action='/users/<%= @user.slugU %>' method='POST'>
    <section>
      <label for='username'>Username: </label>
      <input type='text' name='user[username]' id='username' value='<%= @user.username %>'/>
    </section>
    <br/>
    <section>
      <label for='email'>E-mail: </label>
      <input type='email' name='user[email]' id='email' value='<%= @user.email %>'/>
    </section>
    <br/>
    <section>
      <label for='password'>Current Password: </label>
      <input type='password' name='password' id='password'/>
    </section>
    <br/>
    <section>
      <label for='new_password'>New Password: </label>
      <input type='password' name='user[password]' id='new_password'/>
    </section>
    <br/>
    <section>
      <label for='new_password_verification'>Re-Enter New Password: </label>
      <input type='password' name='password_verification' id='new_password_verification'/>
    </section>
    <br/>
    <section>
      <input type='hidden' name='_method' id='hidden' value='PATCH'/>
      <input type='submit' value='Update Profile'/>
    </section>
  </form>
</section>
